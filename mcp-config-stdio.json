{
  "mcpServers": {
    "llms-bridge-stdio": {
      "command": "uvx",
      "args": [
        "--prerelease=allow",
        "llms-bridge-mcp@latest",
        "stdio"
      ],
      "env": {
        "OPENAI_API_KEY": "your-openai-api-key-here",
        "GEMINI_API_KEY": "your-gemini-api-key-here",
        "PERPLEXITY_API_KEY": "your-perplexity-api-key-here"
      }
    }
  }
}
